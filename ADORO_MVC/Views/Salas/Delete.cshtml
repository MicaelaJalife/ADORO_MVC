@model ADORO_MVC.Models.Sala

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sala</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapacidadMax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapacidadMax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlAireLibre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlAireLibre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
    @if (ViewBag.mensajeError != null)
    {
        <div>
            <p>@ViewBag.mensajeError</p>
        </div>
    }
</div>
