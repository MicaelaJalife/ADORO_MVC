@model ADORO_MVC.Models.Actividad

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <div>
        <h2>@Html.DisplayFor(model => model.Nombre)</h2>
        <div>
            <img src="..\Images\@Html.DisplayFor(model => model.Imagen)">
        </div>
        <div>
            <table>
                <tr>
                    <td>@Html.DisplayFor(model => model.Descripcion)</td>
                </tr>
                <tr>
                    @if (ViewBag.capacidadSala != 0)
                    {
                        <td>Capacidad Disponible: @ViewBag.capacidadSala</td>
                    }
                    else
                    {
                        <td>Entradas agotadas</td>
                    }
                </tr>
            </table>
        </div>
        <div>
            @if (ViewBag.capacidadSala != 0)
            {
            <a asp-action="Reservar" asp-route-id="@Model.Id">Reservar</a> 
            }
            <a asp-action="Index" asp-controller="Home">Volver</a>
        </div>
        
    </div>
</div>
